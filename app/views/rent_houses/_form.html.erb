<%= form_with(model: rent_house, local: true) do |form| %>
  <% if rent_house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rent_house.errors.count, "error") %> prohibited this rent_house from being saved:</h2>

      <ul>
        <% rent_house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <p><%= form.label :rent %><br>
    <%= form.text_field :rent %>円</p>
  </div>

  <div class="field">
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <p><%= form.label :age %><br>
    <%= form.text_field :age %>年</p>
  </div>

  <div class="field">
    <%= form.label :note %><br>
    <%= form.text_area :note %>
  </div>

  <hr style="height: 1px; width: 100%;">

  <%= form.fields_for :nearest_stations do | nearest_station | %>
  <h3><strong>最寄り駅<%= nearest_station.index+1 %></strong></h3>

    <p><%= form.label :line, "路線名" %><br>
    <%= nearest_station.text_field :line %>線</p>

    <p><%= form.label :station, "駅名" %><br>
    <%= nearest_station.text_field :station %>駅</p>

    <p><%= form.label :minute, "徒歩" %><br>
    <%= nearest_station.text_field :minute %>分</p>


<% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

