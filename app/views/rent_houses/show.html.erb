<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @rent_house.name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @rent_house.rent %>
</p>

<p>
  <strong>Address:</strong>
  <%= @rent_house.address %>
</p>

<p>
  <strong>Age:</strong>
  <%= @rent_house.age %>
</p>

<p>
  <strong>Note:</strong>
  <%= @rent_house.note %>
</p>

<hr style="height: 1px; width: 100%;">
<% @rent_house.nearest_stations.each.with_index(1) do |nearest_station, i| %>
  <h3><strong>最寄り駅<%= "#{i}" %></strong></h3>
    <p>
      <strong>Line:</strong>
        <%= nearest_station.line %>
    </p>

    <p>
      <strong>Station:</strong>
        <%= nearest_station.station %>
    </p>

    <p>
      <strong>Minute:</strong>
        <%= nearest_station.minute %>
    </p>
<% end %>

